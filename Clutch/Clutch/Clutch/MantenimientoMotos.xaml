<Window x:Class="Clutch.MantenimientoMotos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clutch"
        mc:Ignorable="d"
        Title="MantenimientoMotos" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Menu">
                <MenuItem Header="salir" x:Name="mnMotosSalir" Click="mnMotosSalir_Click"/>
            </MenuItem>
            <MenuItem Header="Moto">
                <MenuItem Header="Crear" x:Name="mnMotosCrear" Click="mnMotosCrear_Click"/>
                <MenuItem Header="Editar" x:Name="mnMotosEditar" Click="mnMotosEditar_Click"/>
                <MenuItem Header="Borrar" x:Name="mnMotosBorrar" Click="mnMotosBorrar_Click"/>
            </MenuItem>
        </Menu>
        <ListView Margin="10" x:Name="lvMotos" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="lvMotos_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Matricula" Width="120" DisplayMemberBinding="{Binding Matricula}"/>
                    <GridViewColumn Header="CC" Width="120" DisplayMemberBinding="{Binding CC}"/>
                    <GridViewColumn Header="Numero" Width="120" DisplayMemberBinding="{Binding Numero}"/>
                    <GridViewColumn Header="Estado" Width="120" DisplayMemberBinding="{Binding Estado}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
