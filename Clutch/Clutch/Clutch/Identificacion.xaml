<Window x:Class="Clutch.Identificacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clutch"
        mc:Ignorable="d"
        Title="Identificacion" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox VerticalAlignment="Center" Height="40" Margin="10,0" Style="{StaticResource texIdentUsuario}" />
        <TextBox VerticalAlignment="Center" Height="40" Margin="10,0" Style="{StaticResource texIdentPass}" Grid.Row="1" />
        <Button Grid.Row="2" VerticalAlignment="Center" Height="40" HorizontalAlignment="Center" Width="130" Content="Confirmar" Margin="10,0"/>
    </Grid>
</Window>
